<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.mycompany.user_management.registration.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServelet</servlet-name>
        <servlet-class>jspcrud.DeleteServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProfile</servlet-name>
        <servlet-class>jspcrud.DeleteProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminVerification</servlet-name>
        <servlet-class>com.mycompany.user_management.registration.AdminVerification</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminVerification</servlet-name>
        <url-pattern>/AdminVerification</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginToSystem</servlet-name>
        <servlet-class>com.mycompany.user_management.login.LoginToSystem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginToSystem</servlet-name>
        <url-pattern>/login/LoginToSystem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmailForPasswordReset</servlet-name>
        <servlet-class>com.mycompany.user_management.forgotpassword.EmailForPasswordReset</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailForPasswordReset</servlet-name>
        <url-pattern>/EmailForPasswordReset</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ValidateEnteredCode</servlet-name>
        <servlet-class>com.mycompany.user_management.codematching.ValidateEnteredCode</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidateEnteredCode</servlet-name>
        <url-pattern>/ValidateEnteredCode</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdatePassword</servlet-name>
        <servlet-class>com.mycompany.user_management.updatepassword.UpdatePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePassword</servlet-name>
        <url-pattern>/UpdatePassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>com.mycompany.user_management.updatepassword.ChangePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserBlock</servlet-name>
        <servlet-class>jspcrud.UserBlock</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserBlock</servlet-name>
        <url-pattern>/UserBlock</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.mycompany.user_management.logout.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>User_Profile</servlet-name>
        <servlet-class>jspcrud.User_Profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User_Profile</servlet-name>
        <url-pattern>/User_Profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProfile</servlet-name>
        <servlet-class>jspcrud.UpdateProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProfile</servlet-name>
        <url-pattern>/UpdateProfile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>View_History</servlet-name>
        <servlet-class>History.View_History</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>View_History</servlet-name>
        <url-pattern>/View_History</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>crud.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/ControllerServlet</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>host</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>port</param-name>
        <param-value>587</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>DeleteServelet</servlet-name>
        <url-pattern>/DeleteServelet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProfile</servlet-name>
        <url-pattern>/DeleteProfile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
